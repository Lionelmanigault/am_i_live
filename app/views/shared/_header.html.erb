<header>
	<h3><%= link_to 'AM I LIVE', root_path %></h3>

	<% form_tag _path, :method => 'get' do %>
	  <p>
	  	<%= label_tag(:q, "Search for talent, creators, services and industry.") %>
	    <%= text_field_tag :search, params[:search] %>
	    <%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>


		<nav>
			<ul>
				<% if current_user %>
				<li><%= current_user.username %></li>
				<li><%= link_to 'new post', _path %></li>
				<li><%= link_to 'edit profile', _path %></li>
				<li><%= link_to 'upgrade', _path %></li>
				<li><%= link_to 'logout', logout_path, method: :delete %></li>
				<% else %>
					<li><%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search", :name => nil %>
<% end %></li>
					<li><%= link_to 'sign up', new_user_path %></li>
					<li><%= link_to 'login', login_path %></li>
					<li><%= link_to 'help', _path %></li>
					<li><%= link_to 'LIVE COMMUNITY', _path %></li>

				<% end %>
			</ul>
		</nav>
	</header>

	