<header>
	<h3><%= link_to 'AM I LIVE', root_path %></h3>

	<% form_tag user_registration_path, :method => 'get' do %>
	  <p>
	  	<%= label_tag(:q, "Search for talent, creators, services and industry.") %>
	    <%= text_field_tag :search, params[:search] %>
	    <%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>


		<nav>
			<ul>
				<% if current_user %>
				<li><%= current_user.username %></li>
				<li><%= link_to 'book a studio', new_studio_path, method: :get%></li>
				<li><%= link_to 'Studio Times Booked', studios_path, method: :get%></li>
				<li><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
				
				<% else %>
					
					<li><%= link_to 'login', new_user_session_path %></li>
					<li><%= link_to 'help', root_path %></li>
					<li><%= link_to 'LIVE COMMUNITY', root_path %></li>

				<% end %>
			</ul>
		</nav>
	</header>

	